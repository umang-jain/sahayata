<% include ../partials/header.ejs %>

<div class="container">
  <div class="row" id='content_main'>
    <div class="col-md-3">
      <p class="lead">Sahayata</p>
      <div class="list-group">
        <li class="list-group-item active">Info 1</li>
        <li class="list-group-item">Info 2</li>
        <li class="list-group-item">Info 3</li>
      </div>
    </div>
    <div class="col-md-9">
      <div>
        <div>Name : <%= farmer.name %></div>
        <div>Owner : <%= farmer.sex %></div>
        <div>Contact : <%= farmer.location %></div>
        <div>Location : <%= farmer.state %></div>
        <div>Location : <%= farmer.city %></div>
        <div>Location : <%= farmer.lastCrop %></div>
      </div>
      <div class="card bg-light mb-3">
        <div class="text-right">
          <a href="/sahayata/farmer/<%= farmer._id %>/crop/new" class="btn btn-info">Add New Crop</a>
        </div>
        <hr>
        <%   farmer.crops.forEach(function(crop){ %>
        <div class="row">
          <div class="col-md-12">
            <strong> Name : <%= crop.type %></strong>
            <p>Price : <%= crop.quantity %></p>
            <p>Capacity : <%= crop.price %></p>
          </div>
        </div>
        <% }) %>
      </div>
    </div>
  </div>
</div>

<% include ../partials/footer.ejs %>
