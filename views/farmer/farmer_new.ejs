                  <div class="form-group col-md-4">
                      <label for="name">Name</label>
                      <input class="form-control form-control-sm" id="name" type="text" placeholder="Name" name="farmer[name]">
                  </div>
                  <div class="form-group col-md-4">
                      <label for="age">Sex</label>
                      <input class="form-control form-control-sm" id="age" type="text" placeholder="Age" name="farmer[sex]">
                  </div>
