                      <label for="age">Location</label>
                      <input class="form-control form-control-sm" id="age" type="text" placeholder="Age" name="farmer[location]">
                  </div>
                  <div class="form-group col-md-4">
                      <label for="age">State</label>
                      <input class="form-control form-control-sm" id="age" type="text" placeholder="Age" name="farmer[state]">
                  </div>
                  <div class="form-group col-md-4">
                      <label for="age">City</label>
                      <input class="form-control form-control-sm" id="age" type="text" placeholder="Age" name="farmer[city]">
