<% include ../partials/header.ejs %>

<div class="container">
  <div class="row" id='content_main'>
    <div class="col-md-3">
      <p class="lead">Sahayata</p>
      <div class="list-group">
        <li class="list-group-item active">Info 1</li>
        <li class="list-group-item">Info 2</li>
        <li class="list-group-item">Info 3</li>
      </div>
    </div>
    <div class="col-md-9">
      <div>
        <div>Name : <%= transport.name %></div>
        <div>Owner : <%= transport.owner %></div>
        <div>Contact : <%= transport.contact %></div>
        <div>Location : <%= transport.location %></div>
      </div>
      <div class="card bg-light mb-3">
        <div class="text-right">
          <a href="/sahayata/transport/<%= transport._id %>/vehicle/new" class="btn btn-info">Add New Vehicle</a>
        </div>
        <hr>
        <%   transport.vehicles.forEach(function(vehicle){ %>
        <div class="row">
          <div class="col-md-12">
            <strong> Name : <%= vehicle.name %></strong>
            <p>Price : <%= vehicle.price %></p>
            <p>Capacity : <%= vehicle.capacity %></p>
            <p>Vehicle Number : <%= vehicle.vehicleNumber %></p>
          </div>
        </div>
        <% }) %>
      </div>
    </div>
  </div>
</div>

<% include ../partials/footer.ejs %>
