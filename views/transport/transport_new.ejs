<% include ../partials/header %>

<div class="container text-center" id="formnew">

         <h1>Transport Data</h1>
          <form action="/sahayata/transport" method="post">
              <div class="form-row">
                  <div class="form-group col-md-4">
                      <label for="name">Name</label>
                      <input class="form-control form-control-sm" id="name" type="text" placeholder="Name" name="transport[name]">
                  </div>
                  <div class="form-group col-md-4">
                      <label for="location">Location</label>
                      <input class="form-control form-control-sm" id="location" type="text" placeholder="Location" name="transport[location]">
                  </div>
                  <div class="form-group col-md-4">
                      <label for="owner">Owner</label>
                      <input class="form-control form-control-sm" id="owner" type="text" placeholder="Owner" name="transport[owner]">
                  </div>
                  <div class="form-group col-md-4">
                      <label for="contact">Contact</label>
                      <input class="form-control form-control-sm" id="contact" type="text" placeholder="Contact" name="transport[contact]">
                  </div>
                </div>
                <button type="submit" name="button">Submit</button>
          </form>
</div>


